<h2 class="text-center my-3">Entrar</h2>

<div class="form-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "new-tag-label" } %>
      <%= f.input :password,
                  label: "Senha",
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label_html: { class: "new-tag-label" } %>
      <%= f.input :remember_me, as: :boolean, label_html: { class: "new-tag-label" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "carrefour-button" %>
    </div>
  <% end %>
</div>

