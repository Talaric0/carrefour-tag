<h2 class="text-center my-3" style="font-family: 'Archivo'; color: #313236;">Cadastre-se</h2>

<div class="form-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "new-tag-label" }%>
      <%= f.input :first_name,
                  label: "Nome",
                  required: true,
                  autofocus: true,
                  label_html: { class: "new-tag-label" }%>
      <%= f.input :last_name,
                  label: "Sobrenome",
                  required: true,
                  autofocus: true,
                  label_html: { class: "new-tag-label" }%>
      <%= f.input :cpf,
                  label: "CPF",
                  required: true,
                  autofocus: true,
                  label_html: { class: "new-tag-label" },
                  input_html: { id: "user_cpf" }%>
      <%= f.input :address,
                  label: "Endereço",
                  required: true,
                  autofocus: true,
                  label_html: { class: "new-tag-label" },
                  input_html: { id: "user_address" }%>
      <%= f.input :photo,
                  label: "Foto",
                  as: :file,
                  required: true,
                  label_html: { class: "new-tag-label" } %>
      <%= f.input :password,
                  label: "Senha",
                  required: true,
                  hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "new-tag-label" } %>
      <%= f.input :password_confirmation,
                  label: "Confirme sua senha",
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "new-tag-label" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class: "carrefour-button" %>
    </div>
  <% end %>
</div>

<h2 class="text-center my-3" style="font-family: 'Archivo'; color: #313236;">Já é cadastrado?</h2>

<div class="options d-flex flex-column">
  <%= render "devise/shared/links" %>
</div>
