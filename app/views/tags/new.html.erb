<div class="new-tag-message">
  <% if current_user.tags.length.zero? %>
    <h1>Vamos começar!</h1>
  <% else %>
    <h1>Novo Veículo</h1>
  <% end %>

  <h2>Em qual veículo a TAG será instalada?</h2>
</div>

<div class="form-container">
  <%= simple_form_for(@tag) do |f| %>
    <%= f.input :maker, label: "Marca", label_html: { class: "new-tag-label" } %>
    <%= f.input :model, label: "Modelo", label_html: { class: "new-tag-label" } %>
    <%= f.input :plate, label: "Placa", label_html: { class: "new-tag-label" } %>
    <%= f.input :nickname, label: "Apelido do veículo", label_html: { class: "new-tag-label" } %>
    <%= f.submit "Prosseguir", class: "submit-button" %>
  <% end %>
</div>
